{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.12.0/.schema/devbox.schema.json",
  "packages": [
    "coreutils@latest",
    "curl@latest",
    "diffutils@latest",
    "git@latest",
    "gfortran@latest",
    "glibcLocales@latest",
    "gnumake@latest",
    "netcdf@latest",
    "netcdffortran@latest",
    "openssh@latest",
    "parallel@latest",
    "perl538@latest",
    "perl538Packages.ConfigIniFiles@latest",
    "perl538Packages.DBDSQLite@latest",
    "perl538Packages.XMLParser@latest",
    "subversion@latest",
    "which@latest",
  ],
  "env": {
    "DEVBOX_PROMPT_MODIFIER": "ðŸ“¦ ",
  },
  "shell": {
    "init_hook": [
      "export FCM_ROOT=$DEVBOX_PROJECT_ROOT/_download/fcm",
      "export JULES_ROOT=$DEVBOX_PROJECT_ROOT/_download/jules",
      "export JULES_BUILD_DIR=$DEVBOX_PROJECT_ROOT/_build",
      "export JULES_NETCDF=netcdf",
      "export JULES_NETCDF_PATH=$DEVBOX_PROJECT_ROOT/.devbox/nix/profile/default",
      "export PATH=$JULES_BUILD_DIR/build/bin:$FCM_ROOT/bin:$PATH",
    ],
    "scripts": {
      "hello": "test $DEVBOX_SHELL_ENABLED -eq 1 && echo \"Hello $USER\"",
      "setup": "bash $DEVBOX_PROJECT_ROOT/setup.sh $@",
      "jules": "bash $DEVBOX_PROJECT_ROOT/jules.sh $@",
      "loobos": "bash $DEVBOX_PROJECT_ROOT/jules.sh -n config $DEVBOX_PROJECT_ROOT/examples/loobos",
    },
  },
}
